<Window x:Class="FindJob.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FindJob"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid Background="#FF028B8E">


        <Ellipse HorizontalAlignment="Left" Opacity="0.6" Height="156" Margin="-70,0,0,-56" VerticalAlignment="Bottom" Width="163" Fill="#FFBECECE"/>
        <Ellipse HorizontalAlignment="Right" Opacity="0.6" Height="282" Margin="0,-65,-125,0" VerticalAlignment="Top" Width="346" Fill="#FFBECECE"/>
        <Image Margin="-191,-48,-125,-79" Source="/pngwing.com.png" Stretch="Fill" Grid.RowSpan="2"/>

        <DataGrid x:Name="VacanciesGrid" Margin="93,56,64,56" />
        <Label x:Name="l1" Content="Вакансии" HorizontalAlignment="Center" Height="46" VerticalAlignment="Top" Width="138" FontSize="25" Margin="0,-4,0,0" Foreground="White" FontFamily="Gill Sans Ultra Bold"/>
        <Button x:Name="VacanciesRequestBtn" Content="Создать запрос" HorizontalAlignment="Right" Height="27" VerticalAlignment="Bottom" Width="122" Background="#78DBE2" Click="VacanciesRequestBtn_Click" Margin="0,0,214,10" />
        <Button Content="Аналитика" HorizontalAlignment="Right" Height="27" Margin="0,0,83,10" VerticalAlignment="Bottom" Width="126" Background="#78DBE2" Click="Button_Click_1"/>
        <Button Content="Обновить"  HorizontalAlignment="Right" Margin="0,0,12,10" VerticalAlignment="Bottom" Height="27" Width="66" Background="#78DBE2" Click="Button_Click" />
        <Label Content="Всего вакансий:" HorizontalAlignment="Left" Margin="55,0,0,16" VerticalAlignment="Bottom" Height="31" Width="147" FontSize="17" Foreground="White" FontWeight="Bold"/>
        <TextBlock x:Name="VacanciTb" HorizontalAlignment="Left" Margin="202,0,0,19" TextWrapping="Wrap" Text="0" VerticalAlignment="Bottom" Height="23" Width="107" FontSize="17" FontWeight="Bold" Foreground="White"/>

    </Grid>
</Window>
